<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LESCOnario.Views.AboutUsPages"
      xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <RelativeLayout>
            <Frame BackgroundColor="#990000" Padding="2" CornerRadius="20" BorderColor="White">
                <Label Text="Acerca de LESCONARIO" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" FontFamily="Italic"/>
            </Frame>
           <Frame>
            <Button Text="Iniciar Session" HorizontalOptions="CenterAndExpand" WidthRequest="120" TextColor="White" 
                                BackgroundColor="#c70404" BorderColor="White" BorderWidth="2" CornerRadius="20" 
                                Clicked="history_button"></Button>
               </Frame>
</RelativeLayout>
    </ContentPage.Content>
</ContentPage>
